<!doctype html>
<html>

<head>
  <title>Barista App</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body id="profileBody">
  <div class="container">

    <div id="profileHead" class="page-header text-center">
      <h1 id="beanHead">The Bean</h1>
      <h2 id="pageHead"><span class="fas fa-coffee"></span> Profile Page</h2>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div id="logoutHead" class="well">
          <h3><span class="fa fa-user"></span> Barista Profile</h3>

          <!-- <% if (user.local.email) { %>
          <p>
            <strong>id</strong>: <%= user._id %><br>
            <strong>email</strong>: <%= user.local.email %><br>
            <strong>password</strong>: <%= user.local.password %>
          </p> -->
          <a href="/logout" class="click" class="btn btn-default btn-sm">Home</a>
            <br>
          <a href="/unlink/local" class="click" class="btn btn-default">Logout</a>
          <% } else { %>
          <a href="/connect/local" class="btn btn-default">Connect Local</a>
          <% } %>

        </div>
      </div>
      <div class="col-sm-6">
        <h3>Current Orders:</h3>
        <input id="completeOrder" type="hidden" value= "<%= user.local.email%>">
        <ul class="messages">
          <% for(var i=0; i< orders.length; i++) {%>
            <% if (user.local.email && orders[i].complete === false) { %>
            <li class="message">
              <span class="orderName"><%= orders[i].name %></span>
              <span class="orderItem"><%= orders[i].order %></span>
              <button class="completeButton">Complete Order</button>
            </li>

            <% } %>
          <% } %>
        </ul>

    </div>
    <div class="col-sm-6">
      <h3>Completed Orders:</h3>
      <input id="completeOrder" type="hidden" value= "<%= user.local.email%>">
      <ul class="messages">
        <% for(var i=0; i< orders.length; i++) {%>
          <% if (orders[i].complete === true) { %>
          <li class="message">
            <span class="orderName"><%= orders[i].name %></span>
            <span class="orderItem"><%= orders[i].order %></span>
            <span>Order Complete</span>
          </li>

          <% } %>
        <% } %>
      </ul>
  </div>
  <section>
    <img src="img/c1.png" alt="">
  </section>
    <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
    <script src="main.js"></script>

</body>

</html>
